{
  "$schema": "https://schema.zeabur.app/template.json",
  "build": {
    "command": "pnpm install && pnpm build"
  },
  "start": {
    "command": "mkdir -p /var/data && pnpm start"
  },
  "serverless": false,
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "DATABASE_PATH": "/var/data/forum_tickets.db"
  }
}
